<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-md-6 offset-3">

            <form action="/campgrounds" method="post" novalidate class="needs-validation" enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" id='title' type="text" name="campground[title]" required>
                    
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
               
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" id='location' type="text" name="campground[location]" required>

                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" placeholder="0.00" name="campground[price]" id="price"
                            aria-label="price" aria-describedby="price-label" required>
                            
                        </div>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                </div>
               
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" id='description' type="text"
                        name="campground[description]" required></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label ">Upload Images</label>
                    <input class="form-control custom-file  " type="file" id="formFileMultiple" name="image" multiple>     
                  </div>

                <div class="mb-3">
                    <button class="btn btn-success" type="submit">Create</button>
                </div>
            </form>
        </div>
    </div>


  